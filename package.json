{
  "name": "csbcfrontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint --fix --ext **/*.ts **/*.tsx",
    "start": "env-cmd -f .env.local react-scripts start",
    "start:dev": "env-cmd -f .env.development react-scripts start",
    "start:stage": "env-cmd -f .env.stage react-scripts start",
    "build": "env-cmd -f .env.local react-scripts build",
    "build:dev": "env-cmd -f .env.development react-scripts build",
    "build:stage": "env-cmd -f .env.stage react-scripts build",
    "deploy:dev": "firebase deploy --only hosting:development",
    "deploy:stage": "firebase deploy --only hosting:stage",
    "build-and-deploy:dev": "npm run lint && npm run build:dev && npm run deploy:dev",
    "build-and-deploy:stage": "npm run lint && npm run build:stage && npm run deploy:stage"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "caniuse-lite": "^1.0.30001270",
    "clsx": "^1.1.1",
    "env-cmd": "^10.1.0",
    "firebase": "^9.6.2",
    "moment-timezone": "^0.5.34",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.0.0",
    "react-scripts": "^4.0.3",
    "react-select": "^5.3.2",
    "sass": "^1.43.2",
    "stylelint-scss": "^3.21.0",
    "unique-names-generator": "^4.7.1",
    "web-vitals": "^1.0.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^14.17.27",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "expect": "^26.6.2",
    "prettier": "2.6.2",
    "typescript": "^4.5.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not ie 11",
      "not op_mini all",
      "not chrome < 51",
      "not safari < 10"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "https://dev-csbc.fox.ck.ua"
}
